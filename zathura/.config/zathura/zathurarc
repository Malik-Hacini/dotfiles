# ---------------------
# Synctex
# ---------------------
set synctex true
set synctex-editor-command "nvim --remote-silent +%{line} %{input}"

# ---------------------
# Basic Settings
# ---------------------
set highlight-transparency .1
set zoom-center "true"
set selection-clipboard clipboard
set render-loading true
set window-width 1280
set window-height 1080
set adjust-open "best-fit"
set guioptions sv # Remove all GUI elements (menubar, statusbar, scrollbars)
set window-padding 0 # Set window padding to 0

# ---------------------
# Keybindings
# ---------------------
map <Space> toggle_index
map K zoom in
map J zoom out
map p print
map w recolor
map k 5k
map j 5k
map <C-v> toggle_fullscreen

# ---------------------
# Notifications
# ---------------------
set notification-error-bg       "#1e1e2e"
set notification-error-fg       "#ff5555"
set notification-warning-bg     "#1e1e2e"
set notification-warning-fg     "#ffb86c"
set notification-bg             "#1e1e2e"
set notification-fg             "#ffffff"

# ---------------------
# Completion UI
# ---------------------
set completion-bg               "#1e1e2e"
set completion-fg               "#ffffff"
set completion-group-bg         "#1e1e2e"
set completion-group-fg         "#bbbbbb"
set completion-highlight-bg     "#076678"
set completion-highlight-fg     "#ffffff"

# ---------------------
# Index View
# ---------------------
set index-bg                    "#1e1e2e"
set index-fg                    "#ffffff"
set index-active-bg             "#076678"
set index-active-fg             "#ffffff"

# ---------------------
# Input & Status Bar
# ---------------------
set statusbar-bg "#1e1e2e"
set statusbar-fg "#ffffff"
set inputbar-bg   "#1e1e2e"
set inputbar-fg   "#ffffff"

# ---------------------
# Highlights
# ---------------------
set highlight-color             "#076678"  # Blue highlight
set highlight-active-color      "#076678"  # Blue active highlight

# ---------------------
# Rendering
# ---------------------
set render-loading              true
set render-loading-bg           "#1e1e2e"
set render-loading-fg           "#ffffff"

# ---------------------
# Theme (Dark Mode)
# ---------------------
set default-bg                  "#1e1e2e"  # Dark background
set default-fg                  "#ffffff"  # Light foreground

# ---------------------
# Recoloring (PDF content)
# ---------------------
set recolor                     true
set recolor-lightcolor          "#1e1e2e"  # Background when recoloring
set recolor-darkcolor           "#ffffff"  # Text when recoloring
set recolor-keephue             true     # Don't preserve original colors in images

# You can toggle recolor with 'w' (mapped above)
# To disable recoloring completely, change to:
# set recolor false

